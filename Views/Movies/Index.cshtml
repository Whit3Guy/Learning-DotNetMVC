@model DotNetApplicationMVC.Models.MovieGenreViewModel;
@{
// model == modelItem?
// Model - coleção completa de objetos
// item - um objeto específico dentro da coleção
// modelItem - especifíca o tipo de objeto, no caso

//(modelItem => item.Title)
// Html.DisplayFor(modelItem => item.Price)
}

@{
    //titulo da pag basicamente
    ViewData["Title"] = "Index";
}
<h1>Index</h1>

<p>
    @*// chama o controller "Create"*@ 
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="Movies" asp-action="Index" method="get" >
    <p>

        <select asp-for="MovieGenre" asp-items="Model.Genres">
             <option value="" >All</option>
             <option value="Western" >teste western</option>
         </select>

    </p>

    <p>
        <label>Title: <input type="text" asp-for="SearchString"/></label>
        <button type="submit">filter</button>
    </p>

</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @*exibe o próprio nome da chave de um objeto*@
                @Html.DisplayNameFor(model => model.Movies![0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movies![0].ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movies![0].Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movies![0].Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

@foreach (var item in Model.Movies!) {
        <tr>
            <td>
                @*exibe o valor ao inves da chave*@
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @* asp-action = função do controller
                 asp-route-id = passa um id*@
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
